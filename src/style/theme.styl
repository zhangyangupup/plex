html, body, div, span, object,h1, h2, h3, h4, h5, h6, p,
a,b, u, i,dl, dt, dd, ol, ul, li,input
  margin: 0
  padding: 0
  border: 0
  font-size: 100%
  font-weight: normal
  vertical-align: baseline
  touch-action none
  line-height 2rem
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
input
  font-size 0.9rem
button
  width 100%
  height 2.2rem
  line-height 2.2rem
  background-color baseColor
  border 0
  border-radius 5px
  color #fff
  outline none
button:active
  color #bbb
  animation: all 1s
body
  line-height 1
  .el-message
    min-width 60vw
    max-width 90vw
ul 
  list-style none
.word-link
  color $baseColor
  line-height: 2.4rem
  font-size: 0.9rem
  text-decoration: none
  cursor pointer
  transition: all 0.7s
  letter-spacing: 1px
  // border-top 1px solid #ccc
.word-link:hover
  text-decoration underline